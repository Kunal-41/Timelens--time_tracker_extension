{
  "manifest_version": 3,
  "name": "TimeLens - Productivity Tracker",
  "description": "Track your time and boost productivity with detailed insights and beautiful analytics.",
  "version": "2.0",
  "permissions": ["tabs", "storage", "activeTab", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TimeLens - Track Your Productivity",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["dashboard/dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
